<h1>List Of All Articles</h1>

<ul style="list-style-type: none;">
  <% @articles.each do |article| %>
    <li>
    <%= link_to article.title, article_path(article) %>
    <%= link_to article_path(article.id), data: {turbo_method: :delete, turbo_confirm: "Delete #{article.title}?"} do %>
          <i class="fa-regular fa-trash-can"></i>
        <% end %>
    </li>
  <% end %>
</ul>

<i class="fa-sharp fa-solid fa-plus"></i><%= link_to "New Article", new_article_path  %>
